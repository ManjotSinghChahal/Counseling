<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Payment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/linLay"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_6sdp"
            android:background="@drawable/roundcorners_grey"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_8sdp"
                android:weightSum="4"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:id="@+id/cardNumber11"
                    android:text="xxxx"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:id="@+id/cardNumber22"
                    android:layout_weight="1"
                    android:text="xxxx"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center_horizontal"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:layout_weight="1"
                    android:text="xxxx"
                    android:gravity="center_horizontal"
                    android:id="@+id/cardNumber33"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:gravity="center_horizontal"
                    android:text="xxxx"
                    android:id="@+id/cardNumber44"

                    />

            </LinearLayout>



        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/cross_icon"/>

    </RelativeLayout>

    //-----------------------

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:id="@+id/linLay1"
        android:layout_below="@+id/linLay"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_6sdp"
            android:background="@drawable/roundcorners_grey"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_8sdp"
                android:weightSum="4"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:id="@+id/cardNumber111"
                    android:text="xxxx"


                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:id="@+id/cardNumber222"
                    android:layout_weight="1"
                    android:text="xxxx"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:layout_weight="1"
                    android:text="xxxx"
                    android:gravity="center_horizontal"
                    android:id="@+id/cardNumber333"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLength="4"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:gravity="center_horizontal"
                    android:text="xxxx"
                    android:id="@+id/cardNumber444"
                    />

            </LinearLayout>



        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/cross_icon"/>

    </RelativeLayout>

    //--------------------------------


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLay1"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit card Details"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear"

                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Card Number"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Cardholder Name"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Expiration Date"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="CVC"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:background="@drawable/roundcorners_grey"
                    android:id="@+id/cardNumber"
                    android:weightSum="4"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLength="4"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/cardNumber1"
                        android:inputType="number"
                        android:hint="xxxx"
                        android:background="@null"

                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLength="4"
                        android:id="@+id/cardNumber2"
                        android:layout_weight="1"
                        android:hint="xxxx"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:textSize="@dimen/_13sdp"
                        android:inputType="number"
                        android:background="@null"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLength="4"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="xxxx"
                        android:textSize="@dimen/_13sdp"
                        android:id="@+id/cardNumber3"
                        android:background="@null"
                        />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLength="4"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:hint="xxxx"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:textSize="@dimen/_13sdp"
                        android:id="@+id/cardNumber4"
                        android:background="@null"
                        />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/roundcorners_grey"
                    android:padding="@dimen/_5sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cardHolder"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/roundcorners_grey"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/mm"
                        android:maxLength="2"
                        android:hint="MM"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:inputType="number"
                        android:background="@null"/>

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="match_parent"
                        android:id="@+id/slash"
                        android:hint="/"
                        android:textSize="@dimen/_16sdp"
                        android:gravity="center" />

                    <EditText
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/yy"
                        android:maxLength="2"
                        android:hint="YY"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:inputType="number"
                        android:background="@null"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/roundcorners_grey"
                    android:padding="@dimen/_5sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/Cvc"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:maxLength="3"
                        android:inputType="number"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_paymentScreen"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Card"
                android:layout_marginLeft="@dimen/_4sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/colorAqua"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/rel_lay_saveMedical"
            android:background="@drawable/roundcorners_aqua"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:id="@+id/submit"
                android:textSize="@dimen/_14sdp"/>
        </RelativeLayout>







    </LinearLayout>


</RelativeLayout>