<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardview_booking_history"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_below="@+id/rel_spinner_detail"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:id="@+id/rel_BH_therapyName">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:id="@+id/therapyName_BH"
                    android:text="Therapy"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/_50sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/therapyPrice_BH"
                    android:textColor="@color/colorAqua"
                    android:gravity="center_horizontal"
                    android:text="$50"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel_thearDesc_BH"
                android:layout_below="@+id/rel_BH_therapyName">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_thearDesc_BH"
                    android:textSize="@dimen/_12sdp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="No Description"
                    android:layout_marginRight="@dimen/_40sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_centerVertical="true"
                    android:id="@+id/rel_arrowNext_BH"
                    android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right_arrow_icon" />
                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:layout_below="@+id/rel_thearDesc_BH">

                <RelativeLayout
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:id="@+id/rel_reviewcancel_BH"
                    android:background="@drawable/round_corners_red">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/txt_reviewCancel_BH"
                        android:textColor="@color/colorRed"
                        android:text="Cancel"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Pending"
                    android:id="@+id/orderSatatus_bookingHis"
                    android:textColor="@color/colorAqua"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>